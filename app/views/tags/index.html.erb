<h1>Recipe Tags</h1>

<% if @tags.any? %>
  <ul>
    <% @tags.each do |tag| %>
      <li><%= link_to tag.tag, tag_path(tag) %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no tags yet.</p>
<% end %>

<p><%= link_to "Create new tag", new_tag_path %></p><br>

<p><%= link_to "Browse by recipes", recipes_path %></p>
